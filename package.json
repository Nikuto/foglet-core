{
  "name": "foglet-core",
  "version": "0.5.6",
  "description": "Core of the foglet library",
  "main": "src/foglet.js",
  "scripts": {
    "doc": "jsdoc -c .jsdoc.json README.md src/",
    "test": "npm run karma",
    "karma": "karma start karma.config.js",
    "cover": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "server": "node node_modules/foglet-signaling-server/express-signaling-server.js",
    "build:foglet": "browserify -r ./src/foglet.js:foglet -t babelify --presets es2015   > ./dist/foglet.bundle.js",
    "build:watch": "watchify -r ./src/foglet.js:foglet -t babelify --presets es2015  -o ./dist/foglet.bundle.js -v -d "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/folkvir/foglet-core.git"
  },
  "keywords": [
    "spray-wrtc",
    "browser-to-browser",
    "webRTC"
  ],
  "author": "Folkvir",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/folkvir/foglet-core/issues"
  },
  "homepage": "https://github.com/folkvir/foglet-core#readme",
  "dependencies": {
    "causal-broadcast-definition": "^0.1.x",
    "causaltrack": "^0.4.1",
    "immutable": "^3.8.1",
    "lodash": "^4.17.4",
    "lru-cache": "^4.0.2",
    "n2n-overlay-wrtc": "0.0.x",
    "neighborhood-wrtc": "0.0.1",
    "q": "^1.4.1",
    "serialize-javascript": "^1.3.0",
    "simple-peer": "^7.0.0",
    "socket.io-client": "^1.4.8",
    "sorted-cmp-array": "^2.0.1",
    "unicast-definition": "^0.1.0",
    "uuid": "^3.0.1",
    "version-vector-with-exceptions": "0.0.x",
    "vivaldi-coordinates": "^1.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2016": "^6.16.0",
    "babel-register": "^6.18.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "browserify-istanbul": "^2.0.0",
    "chai": "^3.5.0",
    "envify": "^4.0.0",
    "eslint": "^3.13.1",
    "eslint-config-airbnb-base": "^11.0.1",
    "eslint-plugin-import": "^2.2.0",
    "foglet-signaling-server": "^0.1.0",
    "istanbul": "^0.4.5",
    "jquery": "^3.1.1",
    "jsdoc": "^3.4.3",
    "karma": "^1.3.0",
    "karma-browserify": "^5.1.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-coveralls": "^1.1.2",
    "karma-express-http-server": "0.0.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.2.0",
    "karma-mocha-reporter": "^2.2.0",
    "karma-socketio-server": "^1.0.0",
    "mocha": "^3.1.2",
    "nyc": "^8.3.2",
    "spray-wrtc": "^0.1.1",
    "watchify": "^3.7.0"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  }
}
